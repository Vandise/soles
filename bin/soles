#!/usr/bin/env ruby

require "bundler/setup"
require "soles"
require "erb"
require "thor"
require "colorized_string"
require "irb"
require "active_support/inflector"

module Soles
  class Commands < Thor
    def self.source_root
      File.expand_path File.join(__FILE__, "..", "..", "templates")
    end
    
    include Thor::Actions
    desc "new NAME", "Create a new Soles application in the given directory"
    def new(name)
      banner "Generating app..."
      self.destination_root = File.expand_path(File.join(Dir.pwd, name))

      directory ".", vars: {
        class_name: name.classify
      }
      copy_file "../bin/soles", "bin/soles"
      chmod "bin/soles", 0755

      Dir.chdir(self.destination_root) do
        puts `bundle`
        banner "App generated!"
        puts `bin/soles help`
      end
    end

    desc "console ENV", "boot a console with this application environment"
    def console(env = "development")
      self.class.application? do
        ENV['SOLES_APP'] = env
        puts format("%s %s", ColorizedString["[#{env}]"].colorize(:green), ColorizedString["Welcome to Soles"].colorize(:yellow))
        require_relative "../config/app.rb"
        ARGV.clear
        IRB.start File.expand_path(File.join(__FILE__, "..", ".."))
      end
    end

    def self.application?
      is_app = File.exists? File.expand_path(File.join(__FILE__, "..", "..", "config", "app.rb"))
      if block_given?
        if is_app
          yield
        else
          puts "Create a new application with `soles new appname`"  
        end
      else
        is_app
      end
    end

    no_commands do
      def banner(text)
        puts ColorizedString["\n#{text}"].colorize(:yellow)
        puts ColorizedString["-" * 80].colorize(:yellow)
      end
    end
  end
end

require_relative "../config/app.rb" if Soles::Commands.application?
Soles::Commands.start